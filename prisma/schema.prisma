datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  role      Role
  password  String    @default("abcd")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  INTERN
  ENGINEER
  ADMIN
}
